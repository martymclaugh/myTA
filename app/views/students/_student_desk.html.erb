<div class="square container-<%= @student.id %>">
  <input type="hidden" id="url-<%= @student.id %>" value="/teachers/<%= params[:teacher_id] %>/classrooms/<%= params[:id] %>/students/<%= @student.id %>">
    <div class="content">
        <div class="table">
            <div class="table-cell">
                <h3 class="student-name-destroy white"><%= @student.name %></h3>
                <%= button_to('Remove', "/teachers/#{params[:teacher_id]}/classrooms/#{params[:id]}/students/#{@student.id}",
                          method: "delete", name:"#{@student.id}", remote: true, class: 'btn btn-danger destroy destroy-student') %>
            </div>
        </div>
    </div>
</div>

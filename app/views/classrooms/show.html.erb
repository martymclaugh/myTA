<h1><%= @classroom.teacher.name.capitalize %>'s
    <%= @classroom.name.capitalize %>
    Class</h1>

<% if logged_in? %>
<% if @classroom.teacher_id == current_user.id %>
<% if @classroom.students.count > 3 %>
<button type="submit" class="btn btn-success btn" data-toggle="modal" data-target="#Teams">Create New Teams</button>
<% if @classroom.teams.present? %>
<form action="/teachers/<%= params[:teacher_id] %>/classrooms/<%= params[:id] %>/teams">
    <button type="submit" class="btn btn-success btn">View Teams</button><br>
</form>
<% end %>
<% else %>
<p>
    You need at least 4 students to create teams
</p>
<% end %>
<div class="container">
    <div class="modal fade" id="Teams" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header center" style="padding:35px 50px;">
                    <button type="button" class="close white" data-dismiss="modal">&times;</button>
                    <h1 class="modal-title">Teams</h1>
                </div>
                <div class="modal-body">
                    You have
                    <%= @classroom.students.count %>
                    students

                    <form role="form" action="/teachers/<%= @classroom.teacher.id %>/classrooms/<%= @classroom.id %>/teams" method="post">
                        <div class="form-group">
                            <label for="teams">
                                How many teams would you like?</label>
                            <input type="text" class="form-control" id="teams" name="teams" placeholder="enter number">
                            <input type="hidden" class="form-control" id="class-name" name="classroom" value="<%= @classroom.id %>">
                        </div>
                        <button type="submit" class="btn btn-success btn-block">Create Teams</button><br>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="[ col-xs-12 col-sm-6 ]">
        <h2>Students:</h2>
        <% @classroom.students.each do |student| %>
        <h3>
        <li>
            <div class="[ form-group ]">
                <input type="checkbox" name="fancy-checkbox-success" id="fancy-checkbox-success" autocomplete="off"/>
                <div class="[ btn-group ]">
                    <label for="fancy-checkbox-success" class="[ btn btn-success ]">
                        <span class="[ glyphicon glyphicon-ok ]"></span>
                        <span></span>
                    </label>
                    <label for="fancy-checkbox-success" class="[ btn btn-default active ]">
                        <%= student.name %>
                    </label>
                </div>
            </div>
        </li>
    </h3>

    <% end %>
</div>

</div>
</div>
<form role="form" action="/teachers/<%= params[:id] %>/classrooms/<%= @classroom.id %>/students" method="post">
<div class="form-group">
<label for="student-name">
    Student Name:</label>
<input style="width: 20%" type="text" class="form-control" id="student-name" name="name" placeholder="Marty, Max, Andy...">
</div>
<button type="submit" class="btn btn-success btn">Add Student</button><br>
</form>
<% end %>
<% end %>
<% if !logged_in? %>
<% @classroom.students.each do |student| %>
<h3>
<li><%= student.name %>
</li>
</h3>
<% end %>
<% end %>
